<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    tools:context=".ui.VerifyCodeActivity">

    <include
        android:id="@+id/code_head"
        layout="@layout/top_ll_title" />
    <LinearLayout
        android:id="@+id/code_ll_title"
        android:layout_below="@+id/code_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="请输入授权码:"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/code_ll_code"
        android:layout_below="@+id/code_ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">
        <EditText
            android:id="@+id/code_et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="授权码"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColorHint="#c7c7c7"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#ffffff"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/code_ll_note"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/code_ll_code"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="注:请联系授权电话获取授权码"
            android:textColor="#8f8f8f"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/code_btn_submit"
        android:layout_below="@+id/code_ll_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/regbtnboder"
        android:text="确定"
        android:textColor="#ffffff"/>
</RelativeLayout>
