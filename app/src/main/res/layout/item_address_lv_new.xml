<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_address_iv_dian"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/item_no_detail" />

        <TextView
            android:id="@+id/item_address_tv_store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/item_address_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="#646464"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/item_address_tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="m"
                android:textColor="#646464"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_address_tv_address"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text=""
            android:singleLine="true"
            android:textColor="#868784"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/item_address_iv_address"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/address_map"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
       >
        <LinearLayout
            android:id="@+id/item_address_ll_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:gravity="center_vertical"
                android:text="手机号:"
                android:singleLine="true"
                android:textColor="#868784"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_address_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#454545"
                android:textSize="14sp" />
        </LinearLayout>
         <ImageView
             android:id="@+id/item_address_iv_phone"
             android:layout_width="22dp"
             android:layout_height="22dp"
             android:src="@drawable/near_phone"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"/>
     </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
</LinearLayout>
