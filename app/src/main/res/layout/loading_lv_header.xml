<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/loading_ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/loading_rl_detail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/loading_icon_detail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loading_order" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/loading_icon_detail"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="配送订单"
                android:textColor="#454545"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:id="@+id/loading_rl_saoma"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/loading_icon_saoma"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loading_saoma" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/loading_icon_saoma"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="扫描订单"
                android:textColor="#454545"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/loading_view1"
        android:layout_below="@+id/loading_ll_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:id="@+id/loading_ll_sale"
        android:layout_below="@+id/loading_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/loading_rl_sale"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/loading_icon_sale"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loading_retail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/loading_icon_sale"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="铺货装车"
                android:textColor="#454545"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:id="@+id/loading_rl_add"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/loading_icon_add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loading_sale_all" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/loading_icon_add"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="铺货商品"
                android:textColor="#454545"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>