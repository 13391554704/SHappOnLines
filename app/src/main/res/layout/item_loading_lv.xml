<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fg_loading_item_iv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/chanpin"
            android:scaleType="fitXY"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:id="@+id/fg_sell_item_ll_verical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/fg_loading_item_iv"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/fg_loading_item_tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="商品名称"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:singleLine="true"
                  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="规格:"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/fg_loading_item_tvinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="商品信息"
                    android:layout_marginLeft="6dp"
                    android:textColor="#454545"
                    android:textSize="12sp"
                    android:gravity="center"
                  />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fg_loading_item_ll"
                android:layout_width="match_parent"
                android:layout_height="28dp"
               >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/fg_loading_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="数量:"
                        android:textColor="#1c1c1c"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/fg_loading_item_tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:textColor="#1c1c1c"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/fg_loading_item_tv_unitName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="袋"
                        android:textColor="#1c1c1c"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        />
                 </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/fg_loading_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="价格:"
                        android:textColor="#1c1c1c"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/fg_loading_item_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="100"
                        android:textColor="#1c1c1c"
                        android:textSize="14sp"/>
                 </LinearLayout>
             </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
