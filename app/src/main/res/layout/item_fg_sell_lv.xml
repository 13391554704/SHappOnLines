<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#f8f8f8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fg_sell_item_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chanpin"
                android:scaleType="fitXY"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:id="@+id/fg_sell_item_ll_verical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/fg_sell_item_iv"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                >

                <TextView
                    android:id="@+id/fg_sell_item_tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="双汇王中王火腿肠"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="规格:"
                    android:textColor="#8f8f8f"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/fg_sell_item_tvinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="6dp"
                    android:text="60g*10 支装"
                    android:textColor="#8f8f8f"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        >
                        <Button
                            android:id="@+id/fg_sell_item_btn_jian"
                            android:layout_width="35dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center"
                            android:background="@drawable/jian"/>
                        <TextView
                            android:id="@+id/fg_sell_item_tv_show"
                            android:layout_width="30dp"
                            android:layout_height="29.5dp"
                            android:text="0"
                            android:layout_gravity="center"
                            android:background="@drawable/btnboder"
                            android:gravity="center"/>
                        <Button
                            android:id="@+id/fg_sell_item_btn_jia"
                            android:layout_width="35dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center"
                            android:background="@drawable/jia"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/fg_sell_item_tv_res"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="剩余:"
                            android:textColor="#454545"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/fg_sell_item_tvnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="100"
                            android:textColor="#e84133"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/money"/>
                        <TextView
                            android:id="@+id/fg_sell_item_tvprice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="1000.00"
                            android:textColor="#454545"
                            android:textSize="14sp"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <CheckBox
                android:id="@+id/fg_sell_item_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/unchecked"
                android:button="@null"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
