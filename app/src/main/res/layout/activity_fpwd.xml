<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.FpwdActivity">

    <include
        android:id="@+id/fpwd_head"
        layout="@layout/top_ll_title" />

    <ScrollView
        android:id="@+id/login_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--
    <LinearLayout
        android:id="@+id/fpwd_ll_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/login_re_fpwd" />
        <TextView
            android:id="@+id/fpwd_tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="移动车销"
            android:textSize="16sp" />
    </LinearLayout>
        -->
    <LinearLayout
        android:id="@+id/fpwd_ll_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/regllboder"
        android:weightSum="1">

        <EditText
            android:id="@+id/fpwd_et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:hint="请输入帐号"
            android:textSize="16sp"
            android:textColorHint="#dcdcdc"
            android:layout_weight="0.70" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fpwd_ll_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fpwd_ll_phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/regllboder"
        android:weightSum="1">

        <EditText
            android:id="@+id/fpwd_ll_et_passwrod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:hint="请输入密码"
            android:textSize="16sp"
            android:textColorHint="#dcdcdc"
            android:inputType="textPassword"
            android:layout_weight="0.70" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fpwd_ll_repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fpwd_ll_password"
        android:background="@drawable/regllboder"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/fpwd_ll_reg_et_repasswrod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:hint="请确认密码"
            android:textSize="16sp"
            android:textColorHint="#dcdcdc"
            android:inputType="textPassword"
            android:layout_weight="0.70" />
    </LinearLayout>
            <LinearLayout
                android:id="@+id/fpwd_ll_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/fpwd_ll_repassword"
                android:background="@drawable/regllboder"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/fpwd_ll_et_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:hint="请确认验证码"
                    android:textSize="16sp"
                    android:textColorHint="#dcdcdc"
                    android:inputType="textPassword"
                    android:layout_weight="1" />
                    <TextView
                        android:id="@+id/fpwd_ll_code_tv"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:background="@drawable/regtvboder"
                        android:textColor="#dd7373"/>
            </LinearLayout>
    <Button
        android:id="@+id/fpwd_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpwd_ll_code"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/regbtnboder"
        android:gravity="center"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="#ffffff"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
