<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".ui.DetailActivity">

    <include
        android:id="@+id/detail_head"
        layout="@layout/head_title_item" />

    <LinearLayout
        android:id="@+id/detail_ll_top"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_below="@+id/detail_head"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/detail_ll_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="蓝牙设备:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <com.sw.mobsale.online.util.MyTextView
                android:id="@+id/detail_bluetooth_tv"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="设备名称"
                android:textSize="@dimen/small_text_size"
                app:customFont="fonts/PINGFANG MEDIUM.TTF"/>
            <TextView
                android:id="@+id/detail_bluetooth__tv_up"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="更换蓝牙设备"
                android:textColor="#e84232"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/small_text_size"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_ll_date"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="销售日期:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_ll_date_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_ll_number"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="销售编号:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_ll_number_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_ll_name"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商户名称:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_ll_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_ll_adress"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商户地址:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_ll_adress_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_ll_phone"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="移动电话:"
                android:textSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detail_ll_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#333333"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_ll_cheap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_ll_bottom"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="购买数量:"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/detail_ll_total_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="总计金额:"
                    android:textSize="@dimen/small_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/detail_ll_total_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:layout_marginLeft="6dp"
                        android:textColor="#333333"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_ll_pay"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
              >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="付款方式:"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/detail_ll_pay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="实付金额:"
                    android:textSize="@dimen/small_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/detail_ll_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""
                        android:layout_marginLeft="6dp"
                        android:textColor="#333333"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_ll_model"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
           >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="支付方式:"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/detail_ll_model_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/detail_btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e84232"
            android:text="连接设备"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/detail_btn_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#d1d1d1"
            android:text="打印订单"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <ListView
        android:id="@+id/detail_lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_ll_cheap"
        android:layout_below="@+id/detail_ll_top"
       android:divider="#f8f8f8"
        android:dividerHeight="8dp"
        android:layout_marginTop="6dp"/>
</RelativeLayout>
