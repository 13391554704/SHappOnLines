<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">
    <com.sw.mobsale.online.util.MyScrollView
        android:id="@+id/main_sc_gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/main_ll_user"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="帐号:"
                            android:layout_marginLeft="10dp"
                            android:textColor="#505050"
                            android:textSize="16sp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/main_tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:text="("
                            android:textColor="#505050"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/main_tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="请登录"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=")"
                            android:textColor="#505050"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/main_ll_car_number"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="司机:"
                                android:layout_marginLeft="10dp"
                                android:textColor="#505050"
                                android:textSize="16sp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/main_tv_worker"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:text="点击选择司机"
                                android:textColor="#e84232"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/main_tv_car"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:text="点击选择车辆"
                                android:textColor="#e84232"
                                android:textSize="16sp"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f0f0f0" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/main_ll_car"
                    android:layout_width="80dp"
                    android:layout_height="match_parent">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/main_iv_status"
                        android:layout_width="66dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/main_status_n"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f0f0f0"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f8f8f8" />

            <LinearLayout
                android:id="@+id/fg_main_ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/main_rl_loading"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_icon_load"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/main_icon_load" />

                    <TextView
                        android:id="@+id/fg_main_tv_loading"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/main_icon_load"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="装车"
                        android:textColor="#222222"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#f0f0f0" />

                <RelativeLayout
                    android:id="@+id/main_rl_res"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_icon_res"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/main_manager" />

                    <TextView
                        android:id="@+id/fg_main_tv_res"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/main_icon_res"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="库存管理"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f0f0f0" />

            <LinearLayout
                android:id="@+id/fg_main_ll_connect_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/main_rl_connect"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_icon_connect"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/main_icon_connect" />

                    <TextView
                        android:id="@+id/fg_main_tv_connect"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/main_icon_connect"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="交班"
                        android:textColor="#222222"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="#f0f0f0" />

                <RelativeLayout
                    android:id="@+id/main_rl_sale"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_icon_sale"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/main_icon_sell" />

                    <TextView
                        android:id="@+id/fg_main_tv_sale"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/main_icon_sale"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="铺货"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f8f8f8" />

            <LinearLayout
                android:id="@+id/fg_main_ll_nearby"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
               >
                <RelativeLayout
                    android:id="@+id/fg_main_rl_order"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/fg_main_ll_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/main_iv_near"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/main_order" />

                        <TextView
                            android:id="@+id/main_tv_near"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="订单商铺"
                            android:textColor="#454545"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f0f0f0"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    />
                <RelativeLayout
                    android:id="@+id/fg_main_rl_nearby"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:id="@+id/fg_main_ll_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"

                        >
                        <ImageView
                            android:id="@+id/fg_main_iv_loc"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/indent_loc" />

                        <TextView
                            android:id="@+id/fg_main_tv_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="附近店铺"
                            android:textColor="#454545"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0" />
            <com.sw.mobsale.online.util.MyListView
                android:id="@+id/main_lv_nearby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#eeeeee"
                android:dividerHeight="1dp">
            </com.sw.mobsale.online.util.MyListView>
        </LinearLayout>
    </com.sw.mobsale.online.util.MyScrollView>
    <RelativeLayout
        android:id="@+id/main_rl_net_bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/main_iv_net_bug"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_net_bug" />
        <TextView
            android:id="@+id/main_tv_net_bug"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="网络异常"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/main_iv_net_bug"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/main_tv_net_bug">

            <ImageView
                android:id="@+id/main_net_set_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="54dp"
                android:src="@drawable/main_set_net" />

            <ImageView
                android:id="@+id/main_net_refrush_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/main_re_load" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/main_ll_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:visibility="visible"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#cccccc"
            android:text="双汇移动配送"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="经销商"
                    android:gravity="center"
                    android:textColor="#cccccc"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/main_tv_seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#cccccc"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="#cccccc"
                    android:gravity="center"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/main_tv_seller_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#cccccc"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

