<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <ImageView
            android:id="@+id/item_detail_iv_bg"
            android:layout_width="8dp"
            android:layout_marginLeft="-2dp"
            android:layout_height="match_parent"
            android:src="@drawable/item_bg_1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/item_detail_ll_top"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/main_dian" />

                <TextView
                    android:id="@+id/fg_detail_item_store"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="传统兰州拉面"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/fg_detail_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:text="2016/12/13"
                    android:textColor="#9c9c97"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_main_ll_address"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/item_detail_ll_top">

                <TextView
                    android:id="@+id/fg_detail_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="北京市朝阳区安立路39号长新大厦1302室"
                    android:textColor="#9c9c97"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fg_detail_item_tv_mi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="500"
                    android:textColor="#9c9c97"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="米"
                    android:textColor="#9c9c97"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_detail_ll_number"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/item_main_ll_address"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical"
                        android:text="订单号:"
                        android:textColor="#9b9d95"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fg_detail_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="16112858431001"
                        android:textColor="#9c9c97"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/fg_detail_item_finished"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/main_item_finish" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/item_main_ll_pay"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/item_detail_ll_number">
            <TextView
                android:id="@+id/fg_detail_item_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:gravity="left|center_vertical"
                android:text="付款方式:"
                android:textColor="#9c9c97"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fg_detail_item_tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="欠款"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="#9c9c97"
                android:textSize="14sp" />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
