<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="#00000000"
   >
    <RelativeLayout
        android:id="@+id/head_rl_title"
        android:layout_width="80dp"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/head_back_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/title_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:layout_toRightOf="@+id/head_back_title"
            android:gravity="center_vertical"
            android:textColor="#e84232"
            android:textSize="16sp"/>
    </RelativeLayout>

    <com.sw.mobsale.online.util.MyTextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="移动配送"
        app:customFont="fonts/PINGFANG MEDIUM.TTF"
        android:textColor="#e84232"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/head_title_gone"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="显示"
            android:textColor="#e84232"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/head_iv_gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shaixuan"
            android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>
