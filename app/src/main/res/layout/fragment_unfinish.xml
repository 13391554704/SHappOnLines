<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/detail_rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/detail_rl_content"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/main_detail"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/detail_rl_content"
            android:layout_marginTop="20dp"
            android:text="没有订单"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#787878"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/unfinish_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/fg_unfinish_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#f8f8f8"
        android:dividerHeight="8dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
