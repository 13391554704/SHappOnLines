<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QueryStoreActivity">
    <include
        android:id="@+id/store_name_head"
        layout="@layout/head_title_item" />
    <LinearLayout
        android:id="@+id/store_name_et"
        android:layout_below="@+id/store_name_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">
        <EditText
            android:id="@+id/store_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入商户名称"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColorHint="#c7c7c7"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#ffffff"
            />
    </LinearLayout>

    <Button
        android:id="@+id/store_name_btn"
        android:layout_below="@+id/store_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rightboder"
        android:text="确定"
        android:textColor="#ffffff"/>
</RelativeLayout>
