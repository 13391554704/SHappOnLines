<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/item_order_bg"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:src="@drawable/item_sell_bg_1"
        android:layout_marginLeft="-1dp"/>
    <LinearLayout
        android:id="@+id/item_order_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
           >
            <TextView
                android:id="@+id/item_order_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="海底捞似的奋发发啊"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_order_from_tv"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:text="平台"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="#ff9227"
                android:gravity="center"
                android:background="@drawable/order_state"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_order_address_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="阿道夫阿萨德发发司法权威"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单号:"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_order_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="112233445566778899"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_order_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="2017/04/18"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/item_order_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15:20:30"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="金额:"
                    android:textSize="14sp"
                    android:textColor="#e84232"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/item_order_money_tv"/>
                <TextView
                    android:id="@+id/item_order_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1000.00"
                    android:textColor="#e84232"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="备注:"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_order_note_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="按期收货"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
