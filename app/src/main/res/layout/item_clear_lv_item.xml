<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/item_manager_ll_top"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingTop="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/main_dian"/>
                <TextView
                    android:id="@+id/fg_manager_item_store"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="传统兰州拉面"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/item_manager_ll_top"
                android:id="@+id/item_manager_ll_address"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <TextView
                    android:id="@+id/fg_manager_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="北京市朝阳区安立路39号长新大厦1302室"
                    android:layout_marginLeft="30dp"
                    android:gravity="left|center_vertical"
                    android:textSize="14sp"
                    android:textColor="#9c9c97"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_manager_ll_number"
                android:layout_below="@+id/item_manager_ll_address"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="订单号:"
                    android:textColor="#9b9d95"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/fg_manager_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="16112858431001"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#9c9c97"
                    />
            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/fg_manager_item_iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/clear_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f8f8f8"/>
</LinearLayout>
