<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".ui.AddressActivity">
    <include
        android:id="@+id/address_title"
        layout="@layout/head_title_item"/>
    <LinearLayout
        android:id="@+id/address_top"
        android:layout_below="@+id/address_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/main_tv_food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="餐厅"
            android:gravity="center"
            android:textColor="#454545"
            android:background="#ffffff"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/main_tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="超市"
            android:gravity="center"
            android:textColor="#454545"
            android:background="#ffffff"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/main_tv_store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商铺"
            android:gravity="center"
            android:textColor="#454545"
            android:background="#ffffff"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/main_tv_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="菜市场"
            android:gravity="center"
            android:textColor="#454545"
            android:background="#ffffff"/>
    </LinearLayout>

    <View
        android:id="@+id/view_bg"
        android:layout_below="@+id/address_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"/>
    <ListView
        android:id="@+id/address_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#f8f8f8"
        android:dividerHeight="4dp"
        android:layout_below="@+id/view_bg"/>

    <RelativeLayout
        android:id="@+id/main_rl_net_bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_top"
        android:visibility="gone">

        <ImageView
            android:id="@+id/main_iv_net_bug"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_net_bug" />
        <TextView
            android:id="@+id/main_tv_net_bug"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="网络异常"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/main_iv_net_bug"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/main_tv_net_bug">

            <ImageView
                android:id="@+id/main_net_set_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="54dp"
                android:src="@drawable/main_set_net" />

            <ImageView
                android:id="@+id/main_net_refrush_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/main_re_load" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
